{
  "name": "printer-bluetooth",
  "version": "1.0.0",
  "description": "Available at https://webbluetoothcg.github.io/demos/bluetooth-printer/",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf public && mkdir -p public",
    "dev": "tailwindcss -i ./src/tailwind.css -o ./tailwind.css --watch",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./public/tailwind.css --minify",
    "copy:assets": "cp index.html public/index.html && cp app.js public/app.js && cp styles.css public/styles.css && cp logo-black.png public/logo-black.png && cp printer.jpg public/printer.jpg",
    "build": "npm run clean && npm run build:css && npm run copy:assets",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Iyongbudiarso/printer-bluetooth.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Iyongbudiarso/printer-bluetooth/issues"
  },
  "homepage": "https://github.com/Iyongbudiarso/printer-bluetooth#readme",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.14"
  }
}
